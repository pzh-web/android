    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/bar_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255" />

        <SeekBar
            android:id="@+id/bar_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255" />

        <SeekBar
            android:id="@+id/bar_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"/>
    </LinearLayout>

    <TextView
        android:background="#000"
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/service"
        android:onClick="testService"
        android:text="测试service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/bindService"
            android:onClick="bindService"
            android:text="开始"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/stop"
            android:onClick="stop"
            android:text="暂停"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <SeekBar
        android:id="@+id/sb"
        android:max="500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

